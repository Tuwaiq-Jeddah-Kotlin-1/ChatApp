<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="appearance_category"
        app:title="Appearance">

        <SwitchPreferenceCompat
            app:key="dark_mode"
            app:title="Dark mode"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="language_category"
        app:title="Language">

        <DropDownPreference
            app:key="language"
            app:title="App display language"
            app:useSimpleSummaryProvider="true"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_entries"/>

    </PreferenceCategory>


    <PreferenceCategory
        android:layout_height="100dp"
        app:key="about_category">
        <Preference
            app:key="delete_account"
            app:title="Delete your account" />
        <Preference
            app:key="about"
            app:title="About" />
    </PreferenceCategory>


</PreferenceScreen>